{
    "name": "Drowsiness Sensor",
    "version": "1.1.0",
    "description": "Driver drowsiness detection system using ESP32-CAM and Edge Impulse",
    "author": {
        "name": "Your Name",
        "email": "your.email@example.com"
    },
    "hardware": {
        "platform": "ESP32-CAM",
        "model": "AI-Thinker",
        "components": {
            "camera": {
                "type": "OV2640",
                "resolution": "QVGA (320x240)",
                "capture_format": "JPEG",
                "processing_format": "RGB888"
            },
            "buzzer": {
                "pin": 12,
                "type": "Active"
            },
            "led": {
                "flash": 4,
                "builtin": 33
            }
        }
    },
    "dependencies": {
        "arduino": {
            "esp32": "^2.0.0",
            "esp32-camera": "^2.0.0"
        },
        "edge_impulse": {
            "sdk": "^1.0.0",
            "model": "drowsiness-detection-v1"
        }
    },
    "build": {
        "framework": "arduino",
        "platform": "espressif32",
        "board": "esp32cam"
    },
    "model": {
        "input": {
            "width": 96,
            "height": 96,
            "channels": 3,
            "capture_format": "JPEG",
            "processing_format": "RGB888",
            "bits_per_channel": 8
        },
        "classes": [
            "awake",
            "nodding",
            "yawning"
        ],
        "thresholds": {
            "detection": 0.65,
            "awake": 0.60
        }
    }
} 